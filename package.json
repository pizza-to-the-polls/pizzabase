  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "ava": "^3.12.1",
    "csv-parser": "^2.3.3",
    "dotenv": "^8.2.0",
    "glob": "^7.1.6",
    "jest": "^30.2.0",
    "jest-fetch-mock": "^3.0.3",
    "node-mocks-http": "^1.9.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "serverless-domain-manager": "^5.0.0",
    "serverless-esbuild": "^1.57.0",
    "serverless-offline": "^14.4.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@bugsnag/js": "^7.5.1",
    "@bugsnag/plugin-express": "^7.3.5",
    "@types/jsonwebtoken": "^8.5.8",
    "ansis": "^4.2.0",
    "aws-sdk": ">=2.814.0",
    "body-parser": "^1.20.4",
    "cors": "^2.8.5",
    "express": "^4.22.1",
    "form-data": "^4.0.5",
    "jsonwebtoken": "^8.5.1",
    "mailgun.js": "^12.5.0",
    "node-fetch": "^3.2.10",
    "pg": "8.7.1",
    "reflect-metadata": "^0.1.10",
    "serverless": "^4.29.4",
    "serverless-http": "^2.7.0",
    "stripe": "^8.119.0",
    "typeorm": "^0.3.28",
    "typeorm-aurora-data-api-driver": "^3.0.2",
    "uuid": "^8.3.1"
  },
  "scripts": {
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.test.ts\" --exec npm run start",
    "start": "ts-node src/index.ts",
    "clean": "rm -rf .build && npm run fix",
    "fix": "npm run prettier:fix && npm run lint:fix",
    "schema:sync": "typeorm-ts-node-commonjs schema:sync -d src/data-source.ts",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint": "tslint --project .",
    "lint:fix": "tslint --fix --force --project .",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run -d src/data-source.ts",
    "test": "jest -w 1",
    "test:watch": "jest -w 1 --watchAll"
  }
}
